{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "@typescript-eslint/naming-convention": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "semi": ["error", "always"],
    "curly": "warn",
    "eqeqeq": "warn",
    "no-throw-literal": "warn"
  },
  "ignorePatterns": [
    "out",
    "dist",
    "**/*.d.ts",
    "node_modules"
  ],
  "settings": {
    "react": {
      "version": "18"
    }
  }
}
