{
  "comments": {
    "blockComment": ["<!--", "-->"]
  },
  "brackets": [
    ["<", ">"],
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "<", "close": ">" },
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" }
  ],
  "surroundingPairs": [
    ["<", ">"],
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*<(bpmn:\\w+|bpmndi:\\w+)",
      "end": "^\\s*</(bpmn:\\w+|bpmndi:\\w+)>"
    }
  }
}
